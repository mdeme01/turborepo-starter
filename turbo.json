{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "POSTGRES_CONNECTION",
        "POSTGRES_HOST",
        "POSTGRES_PORT",
        "POSTGRES_USER",
        "POSTGRES_PASSWORD",
        "POSTGRES_DB",
        "SERVER_HOST",
        "SERVER_PORT"
    ],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "inputs": ["$TURBO_DEFAULT$", ".env", ".env.*"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "type-check": {
            "dependsOn": ["^type-check"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "migrate": {},
        "seed": {}
    }
}
